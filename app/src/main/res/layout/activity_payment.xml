<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- ðŸ”¸ Header: Logo and Back -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical|center_vertical"
            android:paddingBottom="8dp">

            <ImageView
                android:id="@+id/back_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/back_icon"
                android:contentDescription="@string/back" />


            <ImageView
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:src="@drawable/unibiteslogo" />
        </LinearLayout>

        <!-- ðŸ”¸ Food Item 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/image_1" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chole Bhature"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Quantity Control -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/__rectangle"
                    android:layout_marginTop="6dp"
                    android:padding="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+"
                        android:textColor="#FF6D3A"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:padding="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:paddingHorizontal="12dp"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="#FF6D3A"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:padding="8dp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="â‚¹ 35.00"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- ðŸ”¸ Food Item 2 (Repeat same layout) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"

            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/image_4" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Bhature"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Quantity Control -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/__rectangle"
                    android:layout_marginTop="6dp"
                    android:padding="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+"
                        android:textColor="#FF6D3A"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:padding="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:paddingHorizontal="12dp"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textColor="#FF6D3A"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:padding="8dp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="â‚¹ 15.00"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- ðŸ§¾ Summary Box -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/claculation_box"
            android:layout_marginTop="16dp"
            android:padding="12dp">

            <!-- Divider Line Before "To Pay" -->
<!--            <View-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="1dp"-->
<!--                android:background="#FF8C42"-->
<!--                android:layout_marginTop="16dp"-->
<!--                android:layout_marginBottom="8dp" />-->

            <!-- "To Pay â‚¹ 54.55" Text Centered -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="To Pay â‚¹ 54.55"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#000000"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Including all taxes and charges"
                android:gravity="center"
                android:textColor="#888888"
                android:textSize="14sp"
                android:layout_marginBottom="12dp" />

            <!-- Grey Divider Line  -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CCCCCC"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="        Item                                                       â‚¹ 50.00"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="        GST                                                       â‚¹ 4.55"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FF8C42"
                android:layout_marginTop="6dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="      Grand Total                                 â‚¹ 54.55"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp" />



        </LinearLayout>

        <!-- ðŸ’³ Payment Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose Payment Method"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="#FF6D3A"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Using QR"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FB6D3A" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UPI i'd"
            android:textColor="#FFFFFF"
            android:backgroundTint="#FB6D3A"
            android:layout_marginTop="4dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:backgroundTint="#FB6D3A"
            android:text="By Cart"
            android:textColor="#FFFFFF" />

        <!-- Add the footer navigation -->
        <include
            android:id="@+id/footer"
            layout="@layout/footer_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom" />

    </LinearLayout>
</ScrollView>
